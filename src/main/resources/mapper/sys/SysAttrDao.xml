<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.chris.modules.sys.dao.SysAttrDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.chris.modules.sys.entity.SysAttrEntity" id="sysAttrMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="type" column="type"/>
        <result property="dataSource" column="data_source"/>
        <result property="regExpression" column="reg_expression"/>
        <result property="queryText" column="query_text"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="createUserId" column="create_user_id"/>
        <result property="updateTime" column="update_time"/>
        <result property="updateUserId" column="update_user_id"/>
    </resultMap>

	<select id="queryObject" resultType="com.chris.modules.sys.entity.SysAttrEntity">
		select * from sys_attr where id = #{value}
	</select>

	<select id="queryList" resultType="com.chris.modules.sys.entity.SysAttrEntity">
		select * from sys_attr
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from sys_attr 
	</select>
	 
	<insert id="save" parameterType="com.chris.modules.sys.entity.SysAttrEntity" useGeneratedKeys="true" keyProperty="id">
		insert into sys_attr
		(
			`name`, 
			`type`, 
			`data_source`, 
			`reg_expression`, 
			`query_text`, 
			`status`, 
			`create_time`, 
			`create_user_id`, 
			`update_time`, 
			`update_user_id`
		)
		values
		(
			#{name}, 
			#{type}, 
			#{dataSource}, 
			#{regExpression}, 
			#{queryText}, 
			#{status}, 
			#{createTime}, 
			#{createUserId}, 
			#{updateTime}, 
			#{updateUserId}
		)
	</insert>
	 
	<update id="update" parameterType="com.chris.modules.sys.entity.SysAttrEntity">
		update sys_attr 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="type != null">`type` = #{type}, </if>
			<if test="dataSource != null">`data_source` = #{dataSource}, </if>
			<if test="regExpression != null">`reg_expression` = #{regExpression}, </if>
			<if test="queryText != null">`query_text` = #{queryText}, </if>
			<if test="status != null">`status` = #{status}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="createUserId != null">`create_user_id` = #{createUserId}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}, </if>
			<if test="updateUserId != null">`update_user_id` = #{updateUserId}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from sys_attr where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from sys_attr where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>