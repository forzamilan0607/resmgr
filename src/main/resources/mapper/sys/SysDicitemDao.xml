<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.chris.modules.generator.dao.SysDicitemDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.chris.modules.generator.entity.SysDicitemEntity" id="sysDicitemMap">
        <result property="id" column="id"/>
        <result property="dictId" column="dict_id"/>
        <result property="name" column="name"/>
        <result property="value" column="value"/>
        <result property="extValue1" column="ext_value1"/>
        <result property="extValue2" column="ext_value2"/>
        <result property="sortOrder" column="sort_order"/>
        <result property="createTime" column="create_time"/>
        <result property="createUserId" column="create_user_id"/>
        <result property="updateTime" column="update_time"/>
        <result property="updateUserId" column="update_user_id"/>
    </resultMap>

	<select id="queryObject" resultType="com.chris.modules.generator.entity.SysDicitemEntity">
		select * from sys_dict_item where id = #{value}
	</select>

	<select id="queryList" resultType="com.chris.modules.generator.entity.SysDicitemEntity">
		select * from sys_dict_item
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from sys_dict_item 
	</select>
	 
	<insert id="save" parameterType="com.chris.modules.generator.entity.SysDicitemEntity" useGeneratedKeys="true" keyProperty="id">
		insert into sys_dict_item
		(
			`dict_id`, 
			`name`, 
			`value`, 
			`ext_value1`, 
			`ext_value2`, 
			`sort_order`, 
			`create_time`, 
			`create_user_id`, 
			`update_time`, 
			`update_user_id`
		)
		values
		(
			#{dictId}, 
			#{name}, 
			#{value}, 
			#{extValue1}, 
			#{extValue2}, 
			#{sortOrder}, 
			#{createTime}, 
			#{createUserId}, 
			#{updateTime}, 
			#{updateUserId}
		)
	</insert>
	 
	<update id="update" parameterType="com.chris.modules.generator.entity.SysDicitemEntity">
		update sys_dict_item 
		<set>
			<if test="dictId != null">`dict_id` = #{dictId}, </if>
			<if test="name != null">`name` = #{name}, </if>
			<if test="value != null">`value` = #{value}, </if>
			<if test="extValue1 != null">`ext_value1` = #{extValue1}, </if>
			<if test="extValue2 != null">`ext_value2` = #{extValue2}, </if>
			<if test="sortOrder != null">`sort_order` = #{sortOrder}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="createUserId != null">`create_user_id` = #{createUserId}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}, </if>
			<if test="updateUserId != null">`update_user_id` = #{updateUserId}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from sys_dict_item where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from sys_dict_item where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>