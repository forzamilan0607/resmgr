<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.chris.modules.sys.dao.SysDictDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.chris.modules.sys.entity.SysDictEntity" id="sysDictMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="parentDictitemId" column="parent_dictitem_id"/>
        <result property="dictDesc" column="dict_desc"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="createUserId" column="create_user_id"/>
        <result property="updateTime" column="update_time"/>
        <result property="updateUserId" column="update_user_id"/>
    </resultMap>

	<select id="queryObject" resultType="com.chris.modules.sys.entity.SysDictEntity">
		select * from sys_dict where id = #{value}
	</select>

	<select id="queryList" resultType="com.chris.modules.sys.entity.SysDictEntity">
		select * from sys_dict
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from sys_dict 
	</select>
	 
	<insert id="save" parameterType="com.chris.modules.sys.entity.SysDictEntity" useGeneratedKeys="true" keyProperty="id">
		insert into sys_dict
		(
			`name`, 
			`dict_desc`, 
			`parent_dictitem_id`,
			`status`,
			`create_time`, 
			`create_user_id`, 
			`update_time`, 
			`update_user_id`
		)
		values
		(
			#{name}, 
			#{dictDesc}, 
			#{parentDictitemId},
			#{status},
			#{createTime}, 
			#{createUserId}, 
			#{updateTime}, 
			#{updateUserId}
		)
	</insert>
	 
	<update id="update" parameterType="com.chris.modules.sys.entity.SysDictEntity">
		update sys_dict 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="dictDesc != null">`dict_desc` = #{dictDesc}, </if>
			<if test="parentDictitemId != null">`parent_dictitem_id` = #{parentDictitemId}, </if>
			<if test="status != null">`status` = #{status}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="createUserId != null">`create_user_id` = #{createUserId}, </if>
			<if test="updateUserId != null">`update_user_id` = #{updateUserId},</if>
		</set>
		`updateTime` = now()
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from sys_dict where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from sys_dict where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

    <select id="querySysDictListByCondition" resultType="com.chris.modules.sys.entity.SysDictEntity" parameterType="com.chris.modules.sys.entity.SysDictEntity">
        select * from sys_dict t
        <where>
            <if test="name != null and name != '' ">
                AND t.name = #{name}
            </if>
            <if test="id != null and id != 0 ">
                AND t.id != #{id}
            </if>
        </where>
    </select>

</mapper>