<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.chris.modules.generator.dao.ResAttachmentDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.chris.modules.generator.entity.ResAttachmentEntity" id="resAttachmentMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="url" column="url"/>
        <result property="resId" column="res_id"/>
        <result property="size" column="size"/>
        <result property="type" column="type"/>
        <result property="uploadTime" column="upload_time"/>
        <result property="createTime" column="create_time"/>
        <result property="createUserId" column="create_user_id"/>
        <result property="updateTime" column="update_time"/>
        <result property="updateUserId" column="update_user_id"/>
        <result property="sortOrder" column="sort_order"/>
    </resultMap>

	<select id="queryObject" resultType="com.chris.modules.generator.entity.ResAttachmentEntity">
		select * from t_res_attachment where id = #{value}
	</select>

	<select id="queryList" resultType="com.chris.modules.generator.entity.ResAttachmentEntity">
		select * from t_res_attachment
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_res_attachment 
	</select>
	 
	<insert id="save" parameterType="com.chris.modules.generator.entity.ResAttachmentEntity" useGeneratedKeys="true" keyProperty="id">
		insert into t_res_attachment
		(
			`name`, 
			`url`, 
			`res_id`, 
			`size`, 
			`type`, 
			`upload_time`, 
			`create_time`, 
			`create_user_id`, 
			`update_time`, 
			`update_user_id`, 
			`sort_order`
		)
		values
		(
			#{name}, 
			#{url}, 
			#{resId}, 
			#{size}, 
			#{type}, 
			#{uploadTime}, 
			#{createTime}, 
			#{createUserId}, 
			#{updateTime}, 
			#{updateUserId}, 
			#{sortOrder}
		)
	</insert>
	 
	<update id="update" parameterType="com.chris.modules.generator.entity.ResAttachmentEntity">
		update t_res_attachment 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="url != null">`url` = #{url}, </if>
			<if test="resId != null">`res_id` = #{resId}, </if>
			<if test="size != null">`size` = #{size}, </if>
			<if test="type != null">`type` = #{type}, </if>
			<if test="uploadTime != null">`upload_time` = #{uploadTime}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="createUserId != null">`create_user_id` = #{createUserId}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}, </if>
			<if test="updateUserId != null">`update_user_id` = #{updateUserId}, </if>
			<if test="sortOrder != null">`sort_order` = #{sortOrder}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from t_res_attachment where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_res_attachment where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>