<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.chris.modules.sys.dao.SysDepartmentDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.chris.modules.sys.entity.SysDepartmentEntity" id="sysDepartmentMap">
        <result property="deptId" column="dept_id"/>
        <result property="deptName" column="dept_name"/>
        <result property="companyId" column="company_id"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="createUserId" column="create_user_id"/>
        <result property="modifyTime" column="modify_time"/>
        <result property="modifyUserId" column="modify_user_id"/>
        <result property="isSync" column="is_sync"/>
    </resultMap>

	<select id="queryObject" resultType="com.chris.modules.sys.entity.SysDepartmentEntity">
		select * from sys_department where dept_id = #{value}
	</select>

	<select id="queryList" resultType="com.chris.modules.sys.entity.SysDepartmentEntity">
		select * from sys_department
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by dept_id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from sys_department 
	</select>
	 
	<insert id="save" parameterType="com.chris.modules.sys.entity.SysDepartmentEntity" useGeneratedKeys="true" keyProperty="deptId">
		insert into sys_department
		(
			`dept_name`, 
			`company_id`, 
			`status`, 
			`create_time`, 
			`create_user_id`, 
			`modify_time`, 
			`modify_user_id`, 
			`is_sync`
		)
		values
		(
			#{deptName}, 
			#{companyId}, 
			#{status}, 
			#{createTime}, 
			#{createUserId}, 
			#{modifyTime}, 
			#{modifyUserId}, 
			#{isSync}
		)
	</insert>
	 
	<update id="update" parameterType="com.chris.modules.sys.entity.SysDepartmentEntity">
		update sys_department 
		<set>
			<if test="deptName != null">`dept_name` = #{deptName}, </if>
			<if test="companyId != null">`company_id` = #{companyId}, </if>
			<if test="status != null">`status` = #{status}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="createUserId != null">`create_user_id` = #{createUserId}, </if>
			<if test="modifyTime != null">`modify_time` = #{modifyTime}, </if>
			<if test="modifyUserId != null">`modify_user_id` = #{modifyUserId}, </if>
			<if test="isSync != null">`is_sync` = #{isSync}</if>
		</set>
		where dept_id = #{deptId}
	</update>
	
	<delete id="delete">
		delete from sys_department where dept_id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from sys_department where dept_id in 
		<foreach item="deptId" collection="array" open="(" separator="," close=")">
			#{deptId}
		</foreach>
	</delete>

</mapper>