<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.chris.modules.res.dao.ResParamConfigDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.chris.modules.res.entity.ResParamConfigEntity" id="resParamConfigMap">
        <result property="resId" column="res_id"/>
        <result property="attrId" column="attr_id"/>
        <result property="attrValue" column="attr_value"/>
        <result property="isSync" column="is_sync"/>
    </resultMap>

	<select id="queryObject" resultType="com.chris.modules.res.entity.ResParamConfigEntity">
		select * from t_res_param_config where res_id = #{value}
	</select>

	<select id="queryList" resultType="com.chris.modules.res.entity.ResParamConfigEntity">
		select * from t_res_param_config
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by res_id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from t_res_param_config 
	</select>
	 
	<insert id="save" parameterType="com.chris.modules.res.entity.ResParamConfigEntity">
		insert into t_res_param_config
		(
			`res_id`, 
			`attr_id`, 
			`attr_value`, 
			`is_sync`
		)
		values
		(
			#{resId}, 
			#{attrId}, 
			#{attrValue}, 
			#{isSync}
		)
	</insert>
	 
	<update id="update" parameterType="com.chris.modules.res.entity.ResParamConfigEntity">
		update t_res_param_config 
		<set>
			<if test="attrId != null">`attr_id` = #{attrId}, </if>
			<if test="attrValue != null">`attr_value` = #{attrValue}, </if>
			<if test="isSync != null">`is_sync` = #{isSync}</if>
		</set>
		where res_id = #{resId}
	</update>
	
	<delete id="delete">
		delete from t_res_param_config where res_id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from t_res_param_config where res_id in 
		<foreach item="resId" collection="array" open="(" separator="," close=")">
			#{resId}
		</foreach>
	</delete>

</mapper>